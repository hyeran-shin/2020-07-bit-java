package com.bit.alg2018;

//나누어 떨어지는 숫자배열
import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Alog01 {
	static int[] solution(int[] arr, int divisor) {
		int[] answer = new int[arr.length];

		List<Integer> list = new ArrayList<Integer>(arr.length);
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] % divisor == 0) {
				list.add(i,arr[i]);
			} else {
				list.add(i, 0);
			}
//			else if(!(arr[i] % divisor==0)) {
//				list.add(-1);
//			}
		}
		Collections.sort(list);
		if (list.contains(0)) {
			for (int i = 0; i < list.size(); i++) {
				list.remove(i);
				System.out.println(" ek 000 ");
			}

		}
		for(int i : list) {
			System.out.println(i);
		}
//		for (int i = 0; i < list.size(); i++) {
//			if (list.get(i) == 0) {
////				list.remove(i);
//				System.out.println(list.get(i) + " 삭제 ");
//			} else {
//				System.out.println(list.get(i) + " 므ㅜ야");
//				answer[i] = list.get(i);
//			}
//		}
//		if (list.isEmpty()) {
//
//			return answer;
//		}
		return answer;
	}

	public static void main(String[] args) {
		int[] arr = { 3, 10, 2, 6, 20 };
		int divisor = 10;
		int[] result = solution(arr, divisor);
		for (int r : result) {
			System.out.println(r);
		}

	}
}
